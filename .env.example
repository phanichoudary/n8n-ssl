# Domain Configuration
DOMAIN=your-domain.com
LETSENCRYPT_EMAIL=your-email@example.com

# Timezone
TIMEZONE=America/New_York

# PostgreSQL Configuration
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_NON_ROOT_USER=n8n_user
POSTGRES_NON_ROOT_PASSWORD=change_this_secure_password_too

# n8n Encryption Key (CRITICAL: Generate a random string and keep it safe!)
# Generate with: openssl rand -base64 32
N8N_ENCRYPTION_KEY=generate_a_random_32_character_string_here

# Optional: Basic Auth for n8n (uncomment to enable)
# N8N_BASIC_AUTH_ACTIVE=true
# N8N_BASIC_AUTH_USER=admin
# N8N_BASIC_AUTH_PASSWORD=your_secure_password
